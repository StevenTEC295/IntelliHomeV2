<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/boton_registro_huesped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registro_Huésped"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/boton_registro_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registro_Propietario"
        android:layout_below="@id/boton_registro_huesped"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/boton_cambiar_ingles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change to english"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/boton_cambiar_espanol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar a español"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />
</RelativeLayout>
